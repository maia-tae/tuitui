{
  "name": "@pawi/build",
  "version": "0.0.0",
  "description": "Help create modular apps with blocks.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pawijs/pawi.git"
  },
  "author": "Maia Taewana <maia@pawijs.org>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p setup/tsconfig.${NODE_ENV:=development}.json",
    "postbuild": "cp package.json ../../node_modules/@pawi/build",
    "prepare": "rimraf dist && cp -r ../../node_modules/@pawi/build/dist dist",
    "clean": "rimraf .cache dist coverage ../../node_modules/@pawi/build",
    "test": "jest -c setup/jest.js",
    "test:watch": "jest -c setup/jest.js --watch --coverage false"
  },
  "dependencies": {
    "overmind": "^25.0.2"
  },
  "devDependencies": {
    "@types/simple-mock": "^0.8.1",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "simple-mock": "^0.8.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.5"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "import-sort-style-module",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "import-sort-style-module",
      "options": {}
    }
  },
  "majestic": {
    "args": [
      "-c setup/jest.js"
    ]
  }
}