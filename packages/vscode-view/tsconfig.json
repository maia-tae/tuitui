{
  "compilerOptions": {
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom",
    ],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "test": [
        "src/test"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}