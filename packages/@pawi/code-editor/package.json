{
  "name": "@pawi/code-editor",
  "version": "0.0.0",
  "description": "wrapper around codemirror for pawi",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pawijs/pawi.git"
  },
  "author": "Maia Taewana <maia@pawijs.org>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p setup/tsconfig.${NODE_ENV:=development}.json",
    "postbuild": "cp package.json ../../node_modules/@pawi/code-editor",
    "clean": "rimraf .cache dist coverage ../../node_modules/@pawi/code-editor",
    "prepare": "rimraf dist && cp -r ../../node_modules/@pawi/code-editor/dist dist",
    "stories": "parcel serve --port 8888 --no-autoinstall src/stories/index.html",
    "test": "jest -c setup/jest.js",
    "test:watch": "jest -c setup/jest.js --watch --coverage false"
  },
  "dependencies": {
    "@pawi/build": "next",
    "@pawi/editor": "next",
    "@pawi/locale": "next",
    "@pawi/theme": "next",
    "@pawi/styled": "next",
    "codemirror": "^5.58.0"
  },
  "devDependencies": {
    "@pawi/story": "next",
    "@types/codemirror": "0.0.98"
  }
}