{
	"name": "pawi",
	"displayName": "Pawi Live Coding",
	"publisher": "pawijs",
	"description": "Live coding and visual composition in VSCode",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:pawi.helloWorld",
		"onCommand:pawi.edit",
		"onCustomEditor:pawi.treeEditor"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "pawi.treeEditor",
				"displayName": "Tree Editor",
				"selector": [
					{
						"filenamePattern": "*.awi.json"
					}
				],
				"priority": "default"
			}
		],
		"commands": [
			{
				"command": "pawi.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "pawi.edit",
				"title": "Open editor"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@pawi/build": "next",
		"@pawi/locale": "next",
		"@pawi/editor": "next",
		"overmind": "25.0.2",
		"overmind-react": "26.0.2",
		"react-dom": "16.13.1",
		"react": "16.13.1"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/node": "^14.14.31",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"typescript": "^4.1.5",
		"vscode-test": "^1.5.0",
		"ts-loader": "^8.0.17",
		"webpack": "^5.24.3",
		"webpack-cli": "^4.5.0"
	}
}